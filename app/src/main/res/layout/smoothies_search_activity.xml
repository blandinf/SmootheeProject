<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="@color/black"
        android:text="Recherche par Nom"
        android:textSize="20dp"
        android:gravity="center"
        />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_smoothieName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <EditText
            android:id="@+id/smoothieName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:inputType="textEmailAddress"
            android:hint="Nom du Smoothie"
            android:layout_marginTop="20dp"/>

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="@color/black"
        android:text="Recherche par Fruits"
        android:textSize="20dp"
        android:gravity="center"
        />

    <NumberPicker
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="16dp"></NumberPicker>

    <AutoCompleteTextView
        android:id="@+id/fruit3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:layout_gravity="center"
        android:hint="Votre premier fruit" />

    <AutoCompleteTextView
        android:id="@+id/fruit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:layout_gravity="center"
        android:hint="Votre second fruit" />

    <AutoCompleteTextView
        android:id="@+id/fruit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:layout_gravity="center"
        android:hint="Votre troisiÃ¨me fruit" />

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Rechercher"
        android:layout_marginTop="20dp"/>





</LinearLayout>